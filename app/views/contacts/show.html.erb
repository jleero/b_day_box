<%- model_class = Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => Contact %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @contact.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @contact.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:age_type) %></dt>
      <dd><pre class="prettyprint"><%= @contact.age_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gender) %></dt>
      <dd><pre class="prettyprint"><%= @contact.gender %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:street_address) %></dt>
      <dd><pre class="prettyprint"><%= @contact.street_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @contact.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @contact.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip_code) %></dt>
      <dd><pre class="prettyprint"><%= @contact.zip_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nickname) %></dt>
      <dd><pre class="prettyprint"><%= @contact.nickname %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:relation) %></dt>
      <dd><pre class="prettyprint"><%= @contact.relation %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contacts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_path(@contact), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_path(@contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

